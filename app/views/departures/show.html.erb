<div class="btn-group" data-toggle="buttons">
  <label class="btn btn-primary">
    <input type="radio" name="options" id="north-station" autocomplete="off"> North Station
  </label>
  <label class="btn btn-primary">
    <input type="radio" name="options" id="south-station" autocomplete="off">South Station
  </label>
  <label class="btn btn-primary active">
    <input type="radio" name="options" id="both-stations" autocomplete="off" checked>Both Stations
  </label>
</div>

<table class="tablesorter table table-striped">
  <thead>
    <tr>
      <th>Current Time</th>
      <th>Station</th>
      <th>Trip</th>
      <th>Destination</th>
      <th>Scheduled Time</th>
      <th>Lateness (minutes)</th>
      <th>Track</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
    <% @departures_data.each do |train| %>
      <tr id="<%= train[1].gsub(" ", "-").downcase %>">
        <td><%= Time.at(train[0].to_i).strftime("%H:%M") %></td>
        <td><%= train[1] %></td>
        <td><%= train[2] %></td>
        <td><%= train[3] %></td>
        <td><%= Time.at(train[4].to_i).strftime("%H:%M") %></td>
        <td><%= train[5].to_i/60 %></td>
        <td><%= train[6] %></td>
        <td><%= train[7] %></td>
      </tr>
    <%end%>
  </tbody>
</table>
